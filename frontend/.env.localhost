# Frontend Environment Variables for Local Development
# Copy this file to .env.local in the frontend directory

# API Configuration
VITE_API_URL=http://localhost:5002/api
VITE_API_BASE_URL=http://localhost:5002

# Environment
VITE_NODE_ENV=development

# Features and Debugging
VITE_ENABLE_MOCK_DATA=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=false

# M-Pesa Configuration (for frontend components)
VITE_MPESA_SHORTCODE=174379
VITE_MPESA_ENVIRONMENT=sandbox

# Google Maps (for location services)
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
VITE_APP_NAME="Zuasoko Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Agricultural Marketplace Platform"

# Currency and Localization
VITE_DEFAULT_CURRENCY=KES
VITE_DEFAULT_LOCALE=en-KE
VITE_TIMEZONE=Africa/Nairobi

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
VITE_IMAGE_QUALITY=85

# Performance and Caching
VITE_ENABLE_SW=false
VITE_CACHE_TIMEOUT=300000

# External Services
VITE_SENTRY_DSN=your_sentry_dsn_for_error_tracking
VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Development Tools
VITE_SHOW_REDUX_DEVTOOLS=true
VITE_SHOW_GRID_OVERLAY=false
VITE_SHOW_PERFORMANCE_METRICS=true

# Theming
VITE_DEFAULT_THEME=light
VITE_ENABLE_DARK_MODE=true

# Security
VITE_SECURE_COOKIES=false
VITE_CSRF_PROTECTION=true

# Feature Flags
VITE_FEATURE_REAL_TIME_UPDATES=true
VITE_FEATURE_PUSH_NOTIFICATIONS=true
VITE_FEATURE_OFFLINE_MODE=false
VITE_FEATURE_PWA=false

# Social Media and Sharing
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_TWITTER_HANDLE=@zuasoko

# Company Information
VITE_COMPANY_NAME="Zuasoko Ltd"
VITE_COMPANY_EMAIL="info@zuasoko.com"
VITE_COMPANY_PHONE="+254712345678"
VITE_COMPANY_ADDRESS="Nairobi, Kenya"

# Legal and Compliance
VITE_PRIVACY_POLICY_URL="https://zuasoko.com/privacy"
VITE_TERMS_OF_SERVICE_URL="https://zuasoko.com/terms"
VITE_COOKIE_POLICY_URL="https://zuasoko.com/cookies"

# Support and Help
VITE_SUPPORT_EMAIL="support@zuasoko.com"
VITE_SUPPORT_PHONE="+254712345678"
VITE_HELP_CENTER_URL="https://help.zuasoko.com"

# Build Configuration
VITE_BUILD_TIME=""
VITE_GIT_COMMIT=""
VITE_BUILD_NUMBER=""
