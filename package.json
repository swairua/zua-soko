{
  "name": "zuasoko-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cd frontend && npm run dev",
    "start": "cd frontend && npm run dev",
    "build": "node vercel-build.js",
    "vercel-build": "node vercel-build.js",
    "preview": "cd frontend && npm run preview",
    "dev:backend": "cd backend && npm run dev",
    "dev:api": "cd api && node -e \"const app = require('express')(); app.use('/api', require('./index.js')); app.listen(5001, () => console.log('API server running on http://localhost:5001'));\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "express": "^4.18.2"
  }
}
