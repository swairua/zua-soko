{
  "name": "zuasoko",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "npm run build && node server.js",
    "start:minimal": "node minimal-server.js",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm install && npm run build:prod && cp -r frontend/dist/* .",
    "deploy-db": "node deploy-database.js",
    "setup": "npm install && cd frontend && npm install",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:server": "node server.js",
    "vercel-build": "cd frontend && npm install && npm run build:prod && cp -r dist/* ../",
    "vercel-dev": "vercel dev",
    "deploy": "vercel --prod",
    "deploy-preview": "vercel",
    "type-check": "cd frontend && npm run type-check"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "jsonwebtoken": "^9.0.2"
  }
}
